{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts", "postcss.config.cjs", "tailwind.config.cjs"],
  "exclude": ["node_modules", "dist"]
}
